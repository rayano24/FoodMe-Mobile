<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/individual_restaurant_fragment"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingLeft="@dimen/fragment_horizontal_margin"
    android:paddingTop="@dimen/fragment_vertical_margin"
    android:paddingRight="@dimen/fragment_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <TextView
        android:id="@+id/rName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Restaurant Name"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <TextView
        android:id="@+id/rAddress1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Address"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/rAddress2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Address"
        android:textSize="15sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <TextView
        android:id="@+id/rCuisine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Cuisine"
        android:textSize="15sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <TextView
        android:id="@+id/rDistance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Distance"
        android:textSize="15sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <TextView
        android:id="@+id/rPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Price"
        android:textSize="15sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <TableLayout
        android:id="@+id/LikeBtnTable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible">

        <TableRow
            android:id="@+id/LikeDislikeRow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <Button
                android:id="@+id/LikeBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Like!" />

            <Button
                android:id="@+id/DislikeBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dislike" />

        </TableRow>

        <TableRow
            android:id="@+id/UnlikeRow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <Button
                android:id="@+id/UnlikeBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Unlike"
                android:visibility="visible" />
        </TableRow>

        <TableRow
            android:id="@+id/UndislikeRow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <Button
                android:id="@+id/UnDislikeButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Un-Dislike" />
        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/MapBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Show Map" />
    
    <TableLayout
        android:id="@+id/rclosingTable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible">

        <TableRow>
            android:id="@+id/rclosingRow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <ImageView
                android:id="@+id/rclosing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="closing"
                app:srcCompat="@android:drawable/ic_lock_idle_alarm" />

            <TextView
                android:id="@+id/rclosing2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:lineSpacingExtra="10sp"
                android:text="Closing soon!"
                android:textAlignment="center"
                android:textAppearance="@style/Base.TextAppearance.MaterialComponents.Button"
                android:textColor="@color/design_default_color_secondary_variant"
                android:textSize="14sp"
                android:typeface="normal"/>
        </TableRow>


    </TableLayout>



</LinearLayout>