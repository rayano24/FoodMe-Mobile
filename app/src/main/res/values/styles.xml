<resources>

    <!-- Base application theme. -->

    <!-- Base Theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Attributes for all APIs -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="selectableDrawableColorDefault">?colorControlHighlight</item>
        <item name="selectableDrawableColorInverse">@color/selector_white_pressed</item>
        <item name="selectableDrawableColor">?colorControlHighlight</item>
        <item name="selectableRectDrawable">@drawable/ripple_selectable_rect</item>
        <item name="selectableRectDrawableInverse">@drawable/ripple_selectable_rect_inverse</item>
        <item name="selectableRectDrawableColored">@drawable/ripple_selectable_rect_colored</item>
        <item name="selectableRoundedRectDrawable">@drawable/ripple_selectable_rounded_rect</item>
        <item name="selectableRoundedRectDrawableInverse">@drawable/ripple_selectable_rounded_rect_inverse</item>
        <item name="selectableRoundedRectDrawableColored">@drawable/ripple_selectable_rounded_rect_colored</item>
        <item name="colorPrimary">@color/material_teal_500</item>
        <item name="colorPrimaryDark">@color/material_teal_700</item>
        <item name="colorAccent">@color/material_teal_a700</item>
        <!-- Uncomment to completely color control elements -->
        <item name="colorControlNormal">@color/material_teal_500</item>
        <item name="colorControlActivated">@color/material_teal_500</item>
        <item name="colorControlHighlight">@color/selector_teal_pressed</item>

        <item name="dialogTheme">@style/AppTheme.Dialog.Teal</item>
        <item name="alertDialogTheme">@style/AppTheme.Dialog.Alert.Teal</item>

    </style>


    <!-- Alternate theme -->

    <style name="AppTheme.Alternate" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Attributes for all APIs -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="selectableDrawableColorDefault">?colorControlHighlight</item>
        <item name="selectableDrawableColorInverse">@color/selector_white_pressed</item>
        <item name="selectableDrawableColor">?colorControlHighlight</item>
        <item name="selectableRectDrawable">@drawable/ripple_selectable_rect</item>
        <item name="selectableRectDrawableInverse">@drawable/ripple_selectable_rect_inverse</item>
        <item name="selectableRectDrawableColored">@drawable/ripple_selectable_rect_colored</item>
        <item name="selectableRoundedRectDrawable">@drawable/ripple_selectable_rounded_rect</item>
        <item name="selectableRoundedRectDrawableInverse">@drawable/ripple_selectable_rounded_rect_inverse</item>
        <item name="selectableRoundedRectDrawableColored">@drawable/ripple_selectable_rounded_rect_colored</item>

        <item name="colorPrimary">@color/material_blue_500</item>
        <item name="colorPrimaryDark">@color/material_blue_700</item>
        <item name="colorAccent">@color/material_blue_a700</item>
        <!-- Uncomment to completely color control elements -->
        <item name="colorControlNormal">@color/material_blue_500</item>
        <item name="colorControlActivated">@color/material_blue_500</item>
        <item name="colorControlHighlight">@color/selector_blue_pressed</item>

        <item name="dialogTheme">@style/AppTheme.Dialog.Alternate</item>
        <item name="alertDialogTheme">@style/AppTheme.Dialog.Alert.Alternate</item>

    </style>


    <!-- Dark theme  -->

    <style name="AppTheme.Dark" parent="Theme.AppCompat">
        <!-- Attributes for all APIs -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <!-- Default Alert Dialog Theme -->
    <style name="AppTheme.Dialog" parent="Theme.AppCompat.Light.Dialog">

    </style>


    <!-- Teal Dialog Theme -->
    <style name="AppTheme.Dialog.Teal">
        <item name="colorPrimary">@color/material_teal_500</item>
        <item name="colorPrimaryDark">@color/material_teal_700</item>
        <item name="colorAccent">@color/material_teal_a700</item>
    </style>

    <!-- Alternate dialog Theme-->
    <style name="AppTheme.Dialog.Alternate">
        <item name="colorPrimary">@color/material_blue_500</item>
        <item name="colorPrimaryDark">@color/material_blue_700</item>
        <item name="colorAccent">@color/material_blue_a700</item>
    </style>

    <!-- Alternate dialog Theme-->
    <style name="AppTheme.Dialog.Dark" parent="Theme.AppCompat.Dialog">
        <item name="colorPrimary">@color/material_teal_500</item>
        <item name="colorPrimaryDark">@color/material_teal_700</item>
        <item name="colorAccent">@color/material_teal_a700</item>
    </style>





    <style name="AppTheme.Dialog.Alert" parent="Theme.AppCompat.Light.Dialog.Alert"></style>

    <!-- Teal Alert Dialog Theme -->
    <style name="AppTheme.Dialog.Alert.Teal">
        <item name="colorPrimary">@color/material_teal_500</item>
        <item name="colorPrimaryDark">@color/material_teal_700</item>
        <item name="colorAccent">@color/material_teal_a700</item>
    </style>

    <!-- Alternate Alert Dialog Theme -->
    <style name="AppTheme.Dialog.Alert.Alternate">
        <item name="colorPrimary">@color/material_blue_500</item>
        <item name="colorPrimaryDark">@color/material_blue_700</item>
        <item name="colorAccent">@color/material_blue_a700</item>
    </style>

    <!-- Dark Alert Dialog Theme -->
    <style name="AppTheme.Dialog.Alert.Dark" parent="Theme.AppCompat.Dialog.Alert">
        <item name="colorPrimary">@color/material_teal_500</item>
        <item name="colorPrimaryDark">@color/material_teal_700</item>
        <item name="colorAccent">@color/material_teal_a700</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.ActionBar" />


</resources>
